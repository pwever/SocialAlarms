<h1>Editing User</h1>

<%= form_for(@user) do |f| %>
  
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :time_zone %><br />
    <%= f.time_zone_select :time_zone, nil, :default => "Pacific Time (US & Canada)" %>
  </p>

  <% if @account && @account.admin -%>
  <p>
    <%= f.label :admin %><br />
    <%= f.check_box :admin %>
  </p>
  <% end -%>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', request.env['HTTP_REFERER'] || root_path %>