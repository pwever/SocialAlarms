<h1>Activate Device</h1>

<% form_tag("/link") do %>

  <% if @account.nil? -%>
    <p>
	  <%= label_tag :username %>
	  <%= text_field_tag "user[username]", params[:user][:username] %>
	</p>
	<p>
	  <%= label_tag :password %>
	  <%= password_field_tag "user[password]", params[:user][:password] %>
	</p>
  <% end -%>

  <p>
    <%= label_tag :imei %><br />
    <%= text_field_tag "device[imei]", params[:device][:imei] %>
  </p>
  
  <p>
	<%= submit_tag 'Activate' %>
	<%= link_to "Back", :action => "list" %>
  </p>
<% end %>

