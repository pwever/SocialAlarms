<h1>New Device</h1>

<% form_for(@device) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :imei %><br />
    <%= f.text_field :imei %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :allow_online_edit %><br />
    <%= f.check_box :allow_online_edit %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.collection_select(:user_id, User.all, :id, :username, {:include_blank => 'Select User'}) %>
  </p>
  <p>
    <%= f.label :enabled %><br />
    <%= f.check_box :enabled %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', devices_path %>
